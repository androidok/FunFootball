<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="@dimen/margin_medium">

    <com.boredream.bdcodehelper.view.WrapHeightGridView
        android:id="@+id/gv_course_type"
        style="@style/AbsListViewCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2">
    </com.boredream.bdcodehelper.view.WrapHeightGridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_custom_course_type1"
            style="@style/EditTextSingleLine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="自定义"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_custom_course_type2"
            style="@style/EditTextSingleLine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="自定义"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>