<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_range_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextViewStrokeCirrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程时间" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_week1"
            style="@style/TextViewWeek"
            android:layout_marginLeft="0dp"
            android:text="周一" />

        <TextView
            android:id="@+id/tv_week2"
            style="@style/TextViewWeek"
            android:text="周二" />

        <TextView
            android:id="@+id/tv_week3"
            style="@style/TextViewWeek"
            android:text="周三" />

        <TextView
            android:id="@+id/tv_week4"
            style="@style/TextViewWeek"
            android:text="周四" />

        <TextView
            android:id="@+id/tv_week5"
            style="@style/TextViewWeek"
            android:text="周五" />

        <TextView
            android:id="@+id/tv_week6"
            style="@style/TextViewWeek"
            android:text="周六" />

        <TextView
            android:id="@+id/tv_week7"
            style="@style/TextViewWeek"
            android:text="周日" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:background="@drawable/correct_primary_stroke"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                style="@style/TextViewBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_weight="1"
            android:background="@drawable/correct_primary_stroke"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                style="@style/TextViewBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>